<!DOCTYPE html>
<html>
  <head>
    <title>Breakout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <h1><%= link_to "Songs!", root_path %></h1>
        <ul>
          <% if logged_in? %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
          <li><%= link_to "Login", new_session_path %></li>
          <li><%= link_to "Sign up", new_user_path, id: "sign_up", class: "thing" %></li>
          <% end %>
        </ul>
      </nav>
      <div class="main">
      <%= yield %>
      </div>
    </div>
  </body>
</html>



